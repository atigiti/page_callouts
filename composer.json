{
	"name": "sypets/page-callouts",
	"type": "typo3-cms-extension",
	"description": "Add callouts to page module in TYPO3 backend",
	"license": ["GPL-2.0-or-later"],
	"keywords": [
		"TYPO3",
		"TYPO3 extension",
		"TYPO3 backend",
		"backend"
	],
	"authors": [
		{
			"name": "Sybille Peters",
			"email": "sypets@gmx.de",
			"role": "Developer"
		}
	],
	"config": {
		"sort-packages": true,
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"require": {
		"typo3/cms-core": "^10.4.14 || 11.3.2",
		"typo3/cms-backend": "^10.4.14 || 11.3.2",
		"typo3/cms-fluid": "^10.4.14 || 11.3.2"
	},
	"require-dev": {
		"php": "^7.3 || ^7.4",
		"friendsofphp/php-cs-fixer": "^2.18.6",
		"phpunit/phpunit": "^8.5.21",
		"typo3/testing-framework": "^6.14.0"
	},
	"conflict": {
		"typo3/cms": "*"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "page_callouts",
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		}
	},
	"autoload": {
		"psr-4": {
			"Sypets\\PageCallouts\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Sypets\\PageCallouts\\Tests\\": "Tests/"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
		]
	}
}
